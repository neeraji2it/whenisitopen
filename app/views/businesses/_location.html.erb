<% if @locations.present? %>
  <% @locations.each do |business| %>
    <div class="otherResults"  id="location_<%= business.id %>">
      <div id="main_id1" style="font-size: 12px;">
        <div class="spacedout" style="height: 100px;">
          <div class="loc_name" style="font-size: 14px;margin-top: 10px;padding-bottom: 10px;"><%= business. company_name %></div>
          <%= business.address %>
          <br>
          <%= business.city %>, <%= business.state %>
          <br>
          <div class="primephone"><%= number_to_phone(business.phone) %></div>
          <br>
        </div>
        <table style="display: none;">
          <tbody>
            <tr class="Mon">
              <td>
                <span class="val">
                  <% if (business.mon_from == 'Closed' or business.mon_from.blank? or business.mon_to == 'Closed' or business.mon_to.blank?) %>
                    <span class="border_time" id="Mon" style="position: relative;left: -20px;">
                      Closed
                    </span>
                  <% else %>
                    <span class="border_time" id="mon">
                      <%= business.mon_from.split(/[am pm :]/).first  %>
                      <sup class="time_mi"><%= business.mon_from.split(/[: am pm]/).last %></sup>
                    </span>
                    <span class="border_time" id="Mon_<%= business.id %>">
                      <%= business.mon_to.split(/[am pm :]/).first  %>
                      <sup class="time_mi"><%= business.mon_to.split(/[: am pm]/).last  %></sup>
                    </span>
                  <% end %>
                </span>
              </td>
            </tr>
            <tr class="Tue">
              <td>
                <span class="val">
                  <% if (business.tue_from == 'Closed' or business.tue_from.blank? or business.tue_to == 'Closed' or business.tue_to.blank?) %>
