<script>
  var a = "<%= Date.today.strftime('%a') %>"
  $("."+a).addClass("todaya");

  $(function() {
    var b = $("#<%= Date.today.strftime('%a') %>").text().split(':')[0]
    var liftoff = new Date();
    liftoff = new Date(liftoff.getFullYear(), liftoff.getMonth(), liftoff.getDate(),parseInt(b)+12, 00, 00);
    $('#noDays_<%= Date.today.strftime("%a") %>').countdown({until: liftoff});
  });

  $(document).ready(function(){
    setInterval(function() {
      if($("#noDays_<%= Date.today.strftime("%a") %>").text() == '0:0:0' || $("#noDays_<%= Date.today.strftime("%a") %>").text() == 'NaN:NaN:NaN'){
        $("#noDays_<%= Date.today.strftime("%a") %>").text('')
        $('body').removeClass('open').addClass('close');
        $(".logo a img").attr('src',"/assets/logo-closed.png");
        $(".hand-icon img").attr('src',"/assets/like-close.png");
        $("#message img").attr('src',"/assets/opensin.png");
      }
    }, 30);
  });
</script>