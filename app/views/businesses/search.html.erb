<div class="con-header">
  <div class="headewrap">
    <div class="logo">
      <%= link_to image_tag("/assets/logo-nohour.png",:width => "253", :height => "367"), '/' %>
    </div>
    <%= render :partial => 'businesses/search' %>
    <% if @ab_business_databases.present? %>
      <% for business in @ab_business_databases %>
        <div class="firstResult">
          <div class="closed-auto-service-para">
            <div class="location" style="font-family:'Arial Black'">
              <div id="0" class="primary_hider" style="padding:0 10px; text-align: center;">
                <div id="main_id0">
                  <div class="spacedout1">
                    <div class="loc_name"><%= business.category %></div>
                    <%= business.address %>
                    <br />
                    <%= business.city %>, <%= business.state %>
                    <br />
                    <div class="primephone"><%= business.phone %></div>
                    <br />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="hand-icon">
            <%= image_tag("/assets/like-open.png", :width => '44', :height => '17') %>
            <span id="timer30"><%= @time %></span>
            <span id="defaultCountdown"></span>
          </div>
          <div class="scheduleDiv" style="margin-top: 52px;">
            <div id="schedule0">
              <table cellspacing="2" cellpadding="8" style="font-size: 14px;font-weight: bold;">
                <tbody>
                  <tr class="Mon">
                    <td>
                      <span class="day">Monday </span>
                      <span class="val">
                        <% if !(business.mon_from == 'Closed' or business.mon_from.nil?) %>
                          <span class="border_time">
                            <%= business.mon_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.mon_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                  <tr class="Tue">
                    <td>
                      <span class="day">Tuesday </span>
                      <span class="val">
                        <% if !(business.tue_from == 'Closed' or business.tue_from.nil?) %>
                          <span class="border_time">
                            <%= business.tue_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.tue_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                  <tr class="Wed">
                    <td>
                      <span class="day">Wednesday </span>
                      <span class="val">
                        <% if !(business.wed_from == 'Closed' or business.wed_from.nil?) %>
                          <span class="border_time">
                            <%= business.wed_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.wed_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                  <tr class="Thu">
                    <td>
                      <span class="day">Thursday </span>
                      <span class="val">
                        <% if !(business.thur_from == 'Closed' or business.thur_from.nil?) %>
                          <span class="border_time">
                            <%= business.thur_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.thur_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                </tbody>
              </table>
              <table cellspacing="2" cellpadding="8" style="font-size: 14px;font-weight: bold;">
                <tbody>
                  <tr class="Fri">
                    <td>
                      <span class="day">Friday </span>
                      <span class="val">
                        <% if !(business.fri_from == 'Closed' or business.fri_from.nil?) %>
                          <span class="border_time">
                            <%= business.fri_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.fri_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                  <tr class="Sat">
                    <td>
                      <span class="day">Saturday </span>
                      <span class="val">
                        <% if !(business.sat_from == 'Closed' or business.sat_from.nil?) %>
                          <span class="border_time">
                            <%= business.sat_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.sat_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                  <tr class="Sun">
                    <td>
                      <span class="day">Sunday </span>
                      <span class="val">
                        <% if !(business.sun_from == 'Closed' or business.sun_from.nil?) %>
                          <span class="border_time">
                            <%= business.sun_from  %>
                          </span>&nbsp;&nbsp;&nbsp;
                          <span class="border_time">
                            <%= business.sun_to  %>
                          </span>
                        <% else %>
                          <span class="border_time">
                            Closed
                          </span>
                        <% end %>
                      </span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="red-rib" style="left: 300px;position: relative;top: -9px;">
        <div class="closeOpenLogo">
          <div id="image_src" style="display: none;"></div>
          <div id="message" style="display: none;">
            <%= image_tag("/assets/closesin.png") %>
          </div>
          <div id="phone">416-321-6363 </div>
        </div>
        <div style="clear:both;"></div>
      </div>
    <% end %>
    <div style="clear: both;"></div>
  </div>
</div>
<script>
  var a = "<%= Date.today.strftime('%a') %>"
  $("."+a).addClass("todaya");
</script>
