  <div class="orange">
    <div class="titles">
      <p class="more">More Locations</p>
      <p>Similar Businesses That Are Currently Open</p>
    </div>
  </div>
  <div class="mainContainer" style="margin-top:10px;clear:both; ">
    <div class="searchResults">
      <div class="otherResultsContainer" style="height:532px;overflow:hidden;width:240px;">
        <div class="onlyResults"> </div>
      </div>
      <div id="category">
        <%= render :partial => 'category' %>
      </div>
      <div style="clear:both;"></div>
    </div>
  </div>
</div>
